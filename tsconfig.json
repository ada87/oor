{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "sourceMap": true,
    "noImplicitAny": false,
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "declaration": true,
    "target": "ESNext",
    "downlevelIteration": true,
    "rootDir": "./src/",
    "outDir": "./dist/",
  },
  "exclude": [
    "./src/**/*.test.ts",
    "./dist"
]
}