{
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "declaration": true,
    "downlevelIteration": true,
    "rootDir": "./src/",
    "outDir": "./dist/",
  },
  "exclude": [
    "./src/**/*.test.ts",
    "./dist"
  ]
}